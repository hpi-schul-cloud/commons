{
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "lib",
		"strict": true,
		"module": "commonjs",
		"target": "es5",
		"sourceMap": true,
		"allowJs": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*",
				"lib/*"
			],
			"@test/*": [
				"test/*"
			]
		},
		"lib": [
			"es2015"
		]
	},
	"include": [
		"src/**/*",
		"test/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
